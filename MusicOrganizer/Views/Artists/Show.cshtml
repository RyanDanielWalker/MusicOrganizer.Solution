@using MusicOrganizer.Models;

<h3>Here are all the albums by this artist:</h3>

<ol>
  @foreach (Album album in @Model["albums"])
  {
    <li><a href='/artists/@Model["artist"].Id/albums/@album.Id'>@album.Title</a></li>
    <li><a href='/artists/@Model["artist"].Id/albums/@album.Id'>@album.Format</a></li>
  }
</ol>

<p><a href='/artists/@Model["artist"].Id/album/new'>Add a new album</a></p>
<p><a href='/artists'>Return to artist list</a></p>
<p><a href='/'>Return to Main Page</a></p>